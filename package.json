{
  "name": "crimsonland-remake",
  "version": "0.1.0",
  "description": "Browser-based remake of Crimsonland - a top-down shooter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "bash scripts/test.sh",
    "test:watch": "vitest",
    "test:parity": "vitest run tests/parity/",
    "extract:parity": "tsx scripts/parity-extractor.ts",
    "parity:update": "npm run extract:parity && npm run test:parity",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "ci": "biome ci . && tsc --noEmit && bash scripts/test.sh && vite build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.0",
    "jsdom": "^28.0.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "game",
    "shooter",
    "typescript",
    "canvas"
  ],
  "license": "MIT"
}
